<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AStarOneDriveClient.ViewModels"
        x:Class="AStarOneDriveClient.Views.DebugLogWindow"
        x:DataType="vm:DebugLogViewModel"
        Title="Debug Log Viewer"
        Width="1400"
        Height="800"
        MinWidth="1000"
        MinHeight="600"
        WindowStartupLocation="CenterOwner">

    <Design.DataContext>
        <vm:DebugLogViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*" Margin="10">
        <!-- Account Selection -->
        <StackPanel Grid.Row="0" Spacing="5" Margin="0,0,0,10">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" Spacing="5">
                    <TextBlock Text="Select Account:"
                               FontSize="14"
                               FontWeight="SemiBold" />
                    <ListBox ItemsSource="{Binding Accounts}"
                             SelectedItem="{Binding SelectedAccount}"
                             Height="120"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="10" Margin="5">
                                    <TextBlock Text="{Binding DisplayName}"
                                               FontWeight="Bold"
                                               FontSize="13"
                                               VerticalAlignment="Center" />
                                    <TextBlock FontSize="11"
                                               Opacity="0.8"
                                               VerticalAlignment="Center"
                                               IsVisible="{Binding EnableDebugLogging}">
                                        <Run Text="(Debug Logging: " />
                                        <Run Text="Enabled" FontWeight="Bold" Foreground="Green" />
                                        <Run Text=")" />
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
                <Button Grid.Column="1"
                        Content="Clear Logs"
                        Command="{Binding ClearLogsCommand}"
                        IsEnabled="{Binding SelectedAccount, Converter={x:Static ObjectConverters.IsNotNull}}"
                        VerticalAlignment="Bottom"
                        Margin="10,0,0,0"
                        Height="35" />
            </Grid>
        </StackPanel>

        <!-- Debug Logs Grid -->
        <DockPanel Grid.Row="1">
            <!-- Paging Controls -->
            <Border DockPanel.Dock="Bottom"
                    Padding="10"
                    Margin="0,10,0,0"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="0,1,0,0">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Button Grid.Column="0"
                            Content="Previous"
                            Command="{Binding LoadPreviousPageCommand}"
                            IsEnabled="{Binding CanGoToPreviousPage}"
                            Width="100" />
                    <TextBlock Grid.Column="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="13">
                        <Run Text="Page " />
                        <Run Text="{Binding CurrentPage}" FontWeight="Bold" />
                        <Run Text=" â€¢ Showing " />
                        <Run Text="{Binding DebugLogs.Count}" FontWeight="Bold" />
                        <Run Text=" of " />
                        <Run Text="{Binding TotalRecordCount}" FontWeight="Bold" />
                        <Run Text=" records" />
                    </TextBlock>
                    <Button Grid.Column="2"
                            Content="Next"
                            Command="{Binding LoadNextPageCommand}"
                            IsEnabled="{Binding CanGoToNextPage}"
                            Width="100" />
                </Grid>
            </Border>

            <!-- Logs Grid -->
            <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="5">
                <ScrollViewer HorizontalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding DebugLogs}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                                        BorderThickness="0,0,0,1"
                                        Padding="10,8">
                                    <Grid ColumnDefinitions="150,80,250,*,Auto" RowDefinitions="Auto,Auto">
                                        <!-- Row 1: Main info -->
                                        <StackPanel Grid.Column="0" Grid.Row="0">
                                            <TextBlock Text="Timestamp" FontSize="10" Opacity="0.6" />
                                            <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" FontSize="12" />
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Grid.Row="0">
                                            <TextBlock Text="Level" FontSize="10" Opacity="0.6" />
                                            <TextBlock Text="{Binding LogLevel}" FontSize="12" FontWeight="Bold" />
                                        </StackPanel>
                                        <StackPanel Grid.Column="2" Grid.Row="0" Margin="5,0">
                                            <TextBlock Text="Source" FontSize="10" Opacity="0.6" />
                                            <TextBlock Text="{Binding Source}" FontSize="11" TextWrapping="Wrap" />
                                        </StackPanel>
                                        <StackPanel Grid.Column="3" Grid.Row="0" Margin="5,0">
                                            <TextBlock Text="Message" FontSize="10" Opacity="0.6" />
                                            <TextBlock Text="{Binding Message}" FontSize="11" TextWrapping="Wrap" />
                                        </StackPanel>

                                        <!-- Row 2: Exception (if exists) -->
                                        <StackPanel Grid.Column="0" Grid.ColumnSpan="5" Grid.Row="1"
                                                    Margin="0,5,0,0"
                                                    IsVisible="{Binding Exception, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                            <TextBlock Text="Exception Details:" FontSize="10" Opacity="0.6" />
                                            <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                                                    Padding="8"
                                                    CornerRadius="3"
                                                    Margin="0,3,0,0">
                                                <TextBlock Text="{Binding Exception}"
                                                           FontSize="10"
                                                           FontFamily="Consolas,Courier New"
                                                           TextWrapping="Wrap"
                                                           Foreground="Red" />
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </DockPanel>
    </Grid>
</Window>