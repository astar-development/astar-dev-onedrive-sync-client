<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AStarOneDriveClient.ViewModels"
        x:Class="AStarOneDriveClient.Views.UpdateAccountDetailsWindow"
        x:DataType="vm:UpdateAccountDetailsViewModel"
        Title="Update Account Details"
        Width="900"
        Height="800"
        MinWidth="700"
        MinHeight="600"
        WindowStartupLocation="CenterOwner">

    <Design.DataContext>
        <vm:UpdateAccountDetailsViewModel />
    </Design.DataContext>

    <DockPanel Margin="10">
        <!-- Status Message Bar -->
        <Border DockPanel.Dock="Top"
                Margin="0,0,0,10"
                Padding="10"
                IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                CornerRadius="5">
            <Border.Styles>
                <Style Selector="Border">
                    <Setter Property="Background" Value="LightCoral" />
                </Style>
                <Style Selector="Border[Tag=true]">
                    <Setter Property="Background" Value="LightGreen" />
                </Style>
            </Border.Styles>
            <Border.Tag>
                <Binding Path="IsSuccess" />
            </Border.Tag>
            <TextBlock Text="{Binding StatusMessage}"
                       FontWeight="SemiBold"
                       TextWrapping="Wrap" />
        </Border>

        <!-- Button Panel -->
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10"
                    Margin="0,10,0,0">
            <Button Content="Update"
                    Command="{Binding UpdateCommand}"
                    Width="100"
                    HorizontalContentAlignment="Center" />
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Width="100"
                    HorizontalContentAlignment="Center" />
        </StackPanel>

        <!-- Main Content -->
        <Grid RowDefinitions="Auto,*,Auto">
            <!-- Account List -->
            <TextBlock Grid.Row="0"
                       Text="Select Account to Edit:"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,0,0,5" />

            <ListBox Grid.Row="1"
                     ItemsSource="{Binding Accounts}"
                     SelectedItem="{Binding SelectedAccount}"
                     Margin="0,5,0,15">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Spacing="5" Margin="5">
                            <TextBlock Text="{Binding DisplayName}"
                                       FontWeight="Bold"
                                       FontSize="14" />
                            <TextBlock Text="{Binding LocalSyncPath}"
                                       FontSize="12"
                                       TextWrapping="Wrap" />
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <TextBlock Text="{Binding IsAuthenticated, StringFormat='Authenticated: {0}'}"
                                           FontSize="11"
                                           Opacity="0.6" />
                                <TextBlock Text="{Binding LastSyncUtc, StringFormat='Last Sync: {0:g}'}"
                                           FontSize="11"
                                           Opacity="0.6" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Edit Panel (shown when account is selected) -->
            <Border Grid.Row="2"
                    Padding="15"
                    Margin="0,10,0,0"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="5"
                    IsVisible="{Binding SelectedAccount, Converter={x:Static ObjectConverters.IsNotNull}}">
                <StackPanel Spacing="15">
                    <TextBlock Text="Edit Account Details"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,10" />

                    <!-- Read-only fields -->
                    <StackPanel Spacing="10">

                        <StackPanel>
                            <TextBlock Text="Display Name:" FontWeight="SemiBold" />
                            <TextBlock Text="{Binding SelectedAccount.DisplayName}" Margin="0,2,0,0" />
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Is Authenticated:" FontWeight="SemiBold" />
                            <TextBlock Text="{Binding SelectedAccount.IsAuthenticated}" Margin="0,2,0,0" />
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Last Sync:" FontWeight="SemiBold" />
                            <TextBlock Text="{Binding SelectedAccount.LastSyncUtc, StringFormat='{}{0:g}'}" Margin="0,2,0,0" />
                        </StackPanel>
                    </StackPanel>

                    <Separator />

                    <!-- Editable fields -->
                    <StackPanel Spacing="10">
                        <StackPanel>
                            <TextBlock Text="Local Sync Path:" FontWeight="SemiBold" />
                            <Grid ColumnDefinitions="*,Auto" Margin="0,5,0,0">
                                <TextBox Grid.Column="0"
                                         Text="{Binding LocalSyncPath}"
                                         Watermark="Select a folder..."
                                         Margin="0,0,5,0" />
                                <Button Grid.Column="1"
                                        Content="Browse..."
                                        Command="{Binding BrowseFolderCommand}"
                                        Width="100" />
                            </Grid>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Enable Detailed Sync Logging:" FontWeight="SemiBold" />
                            <ToggleSwitch IsChecked="{Binding EnableDetailedSyncLogging}"
                                          Margin="0,5,0,0"
                                          OnContent="Enabled"
                                          OffContent="Disabled" />
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Enable Debug Logging:" FontWeight="SemiBold" />
                            <ToggleSwitch IsChecked="{Binding EnableDebugLogging}"
                                          Margin="0,5,0,0"
                                          OnContent="Enabled"
                                          OffContent="Disabled" />
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Max Parallel Upload/Downloads (1-10):" FontWeight="SemiBold" />
                            <NumericUpDown Value="{Binding MaxParallelUpDownloads}"
                                           Minimum="1"
                                           Maximum="10"
                                           Increment="1"
                                           FormatString="0"
                                           Margin="0,5,0,0"
                                           Width="150"
                                           HorizontalAlignment="Left" />
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Max Items In Batch (1-100):" FontWeight="SemiBold" />
                            <NumericUpDown Value="{Binding MaxItemsInBatch}"
                                           Minimum="1"
                                           Maximum="100"
                                           Increment="5"
                                           FormatString="0"
                                           Margin="0,5,0,0"
                                           Width="150"
                                           HorizontalAlignment="Left" />
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Auto-Sync Interval (minutes, 60-1440):" FontWeight="SemiBold" />
                            <TextBlock Text="Leave empty to disable automatic remote checks"
                                       FontSize="11"
                                       Opacity="0.7"
                                       Margin="0,2,0,5" />
                            <NumericUpDown Value="{Binding AutoSyncIntervalMinutes}"
                                           Minimum="60"
                                           Maximum="1440"
                                           Increment="60"
                                           FormatString="0"
                                           AllowSpin="True"
                                           ShowButtonSpinner="True"
                                           Watermark="Disabled"
                                           Margin="0,5,0,0"
                                           Width="150"
                                           HorizontalAlignment="Left" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>