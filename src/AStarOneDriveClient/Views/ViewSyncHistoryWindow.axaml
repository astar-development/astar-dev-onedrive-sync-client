<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AStarOneDriveClient.ViewModels"
        x:Class="AStarOneDriveClient.Views.ViewSyncHistoryWindow"
        x:DataType="vm:ViewSyncHistoryViewModel"
        Title="View Sync History"
        Width="800"
        Height="600"
        MinWidth="600"
        MinHeight="400"
        WindowStartupLocation="CenterOwner">

    <Design.DataContext>
        <vm:ViewSyncHistoryViewModel />
    </Design.DataContext>

    <Panel Margin="20">
        <TextBlock Text="{Binding PlaceholderMessage}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="16" />
    </Panel>
</Window>
