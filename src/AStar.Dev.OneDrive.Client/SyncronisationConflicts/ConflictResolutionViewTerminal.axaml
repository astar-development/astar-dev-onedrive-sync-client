<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AStar.Dev.OneDrive.Client.SyncronisationConflicts"
             xmlns:enums="clr-namespace:AStar.Dev.OneDrive.Client.Core.Models.Enums;assembly=AStar.Dev.OneDrive.Client.Core"
             xmlns:converters="using:AStar.Dev.OneDrive.Client.Converters"
             x:Class="AStar.Dev.OneDrive.Client.SyncronisationConflicts.ConflictResolutionViewTerminal"
             x:DataType="vm:ConflictResolutionViewModel"
             FontFamily="Consolas, monospace">

    <UserControl.Resources>
        <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:ConflictResolutionViewModel />
    </Design.DataContext>

    <UserControl.Styles>
        <!-- Neon button styles -->
        <Style Selector="Button.neon">
            <Setter Property="Background" Value="#001100"/>
            <Setter Property="Foreground" Value="#00FF41"/>
            <Setter Property="BorderBrush" Value="#00FF41"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontFamily" Value="Consolas, monospace"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style Selector="Button.neon:pointerover">
            <Setter Property="Background" Value="#003300"/>
        </Style>

        <Style Selector="RadioButton">
            <Setter Property="Foreground" Value="#00FF41"/>
            <Setter Property="FontFamily" Value="Consolas, monospace"/>
        </Style>
    </UserControl.Styles>

    <Border Background="#111111"
            BorderBrush="#00FF41"
            BorderThickness="2"
            Padding="24">

        <Grid RowDefinitions="Auto,*,Auto">
            <!-- Header -->
            <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,20">
                <Border Background="#001100" BorderBrush="#00FF41" BorderThickness="0,0,0,2" Padding="0,0,0,8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="[!]" FontSize="14" Foreground="#FF0000" FontWeight="Bold"/>
                        <TextBlock Text="CONFLICT_RESOLUTION_MODULE" FontSize="14" Foreground="#00FF41" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
                <TextBlock Text=">> Files modified both locally and remotely require manual resolution"
                           Foreground="#00AA33"
                           FontSize="10"
                           TextWrapping="Wrap"/>
                <TextBlock Text="{Binding StatusMessage, StringFormat='[{0}]'}"
                           TextWrapping="Wrap"
                           Foreground="#00FF41"
                           FontSize="11"
                           FontWeight="SemiBold" />
            </StackPanel>

            <!-- Conflicts List -->
            <ScrollViewer Grid.Row="1" IsVisible="{Binding HasConflicts}">
                <ItemsControl ItemsSource="{Binding Conflicts}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="vm:ConflictItemViewModel">
                            <Border Background="#001100"
                                    BorderBrush="#FF0000"
                                    BorderThickness="2"
                                    Padding="16"
                                    Margin="0,0,0,16">
                                <Grid RowDefinitions="Auto,Auto,Auto,Auto">
                                    <!-- File Path -->
                                    <Border Grid.Row="0"
                                            Background="#000000"
                                            BorderBrush="#00FF41"
                                            BorderThickness="0,0,0,1"
                                            Padding="8"
                                            Margin="0,0,0,12">
                                        <TextBlock Text="{Binding FilePath, StringFormat='FILE: {0}'}"
                                                   Foreground="#00FF41"
                                                   FontWeight="Bold"
                                                   FontSize="11"
                                                   TextWrapping="Wrap"/>
                                    </Border>

                                    <!-- Conflict Details -->
                                    <Grid Grid.Row="1" ColumnDefinitions="*,16,*" Margin="0,0,0,12">
                                        <!-- Local Version -->
                                        <Border Grid.Column="0"
                                                Background="#000000"
                                                BorderBrush="#00AA33"
                                                BorderThickness="1"
                                                Padding="10">
                                            <StackPanel Spacing="4">
                                                <TextBlock Text="[LOCAL_VERSION]"
                                                           Foreground="#00AA33"
                                                           FontSize="10"
                                                           FontWeight="Bold"/>
                                                <TextBlock Text="{Binding LocalDetailsDisplay}"
                                                           Foreground="#00FF41"
                                                           FontSize="9"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- Remote Version -->
                                        <Border Grid.Column="2"
                                                Background="#000000"
                                                BorderBrush="#00AA33"
                                                BorderThickness="1"
                                                Padding="10">
                                            <StackPanel Spacing="4">
                                                <TextBlock Text="[REMOTE_VERSION]"
                                                           Foreground="#00AA33"
                                                           FontSize="10"
                                                           FontWeight="Bold"/>
                                                <TextBlock Text="{Binding RemoteDetailsDisplay}"
                                                           Foreground="#00FF41"
                                                           FontSize="9"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>

                                    <!-- Resolution Options -->
                                    <Border Grid.Row="2"
                                            Background="#000000"
                                            BorderBrush="#00FF41"
                                            BorderThickness="1"
                                            Padding="12"
                                            Margin="0,0,0,12">
                                        <StackPanel Spacing="8">
                                            <TextBlock Text="[SELECT_RESOLUTION_STRATEGY]"
                                                       Foreground="#00FF41"
                                                       FontSize="10"
                                                       FontWeight="Bold"/>
                                            <RadioButton GroupName="{Binding Id}"
                                                         Content=">> Keep Local Version (overwrite remote)"
                                                         IsChecked="{Binding SelectedStrategy, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static enums:ConflictResolutionStrategy.KeepLocal}}"
                                                         FontSize="10"/>
                                            <RadioButton GroupName="{Binding Id}"
                                                         Content=">> Keep Remote Version (overwrite local)"
                                                         IsChecked="{Binding SelectedStrategy, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static enums:ConflictResolutionStrategy.KeepRemote}}"
                                                         FontSize="10"/>
                                            <RadioButton GroupName="{Binding Id}"
                                                         Content=">> Keep both (rename local, download remote)"
                                                         IsChecked="{Binding SelectedStrategy, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static enums:ConflictResolutionStrategy.KeepBoth}}"
                                                         FontSize="10"/>
                                            <RadioButton GroupName="{Binding Id}"
                                                         Content=">> Skip (don't resolve now)"
                                                         IsChecked="{Binding SelectedStrategy, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static enums:ConflictResolutionStrategy.None}}"
                                                         FontSize="10"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Bottom Actions -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="12" Margin="0,16,0,0" HorizontalAlignment="Right">
                <Button Content="[RESOLVE_ALL]"
                        Command="{Binding ResolveAllCommand}"
                        IsEnabled="{Binding !IsResolving}"
                        Classes="neon"
                        MinWidth="140"
                        Height="40"/>
            </StackPanel>

            <!-- Loading Overlay -->
            <Border Grid.Row="0" Grid.RowSpan="3"
                    Background="#E0000000"
                    IsVisible="{Binding IsLoading}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
                    <TextBlock Text="████████" Foreground="#00FF41" FontSize="20" HorizontalAlignment="Center"/>
                    <TextBlock Text="[LOADING CONFLICTS...]" Foreground="#00FF41" FontSize="12" FontWeight="Bold"/>
                    <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="#00FF41"/>
                </StackPanel>
            </Border>

            <!-- Resolving Overlay -->
            <Border Grid.Row="0" Grid.RowSpan="3"
                    Background="#E0000000"
                    IsVisible="{Binding IsResolving}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
                    <TextBlock Text="████████" Foreground="#00FF41" FontSize="20" HorizontalAlignment="Center"/>
                    <TextBlock Text="[APPLYING RESOLUTION...]" Foreground="#00FF41" FontSize="12" FontWeight="Bold"/>
                    <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="#00FF41"/>
                    <TextBlock Text="{Binding StatusMessage, StringFormat='>> {0}'}"
                               Foreground="#00AA33"
                               FontSize="10"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               MaxWidth="300"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
