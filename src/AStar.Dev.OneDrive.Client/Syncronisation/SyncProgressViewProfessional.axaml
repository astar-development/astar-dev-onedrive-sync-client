<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AStar.Dev.OneDrive.Client.Syncronisation"
             x:Class="AStar.Dev.OneDrive.Client.Syncronisation.SyncProgressViewProfessional"
             x:DataType="vm:SyncProgressViewModel">

    <Design.DataContext>
        <vm:SyncProgressViewModel />
    </Design.DataContext>

    <UserControl.Styles>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>

        <Style Selector="Button.primary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#106EBE"/>
        </Style>

        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#0078D4"/>
            <Setter Property="BorderBrush" Value="#0078D4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>
    </UserControl.Styles>

    <!-- Semi-transparent dark background overlay -->
    <Border Background="#E6000000" CornerRadius="8">
        <Grid RowDefinitions="Auto,*,Auto,Auto" Margin="40">

            <!-- Header -->
            <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,32">
                <TextBlock Text="Sync Progress"
                           FontSize="28"
                           FontWeight="SemiBold"
                           Foreground="White"/>
                <TextBlock Text="{Binding StatusMessage}"
                           FontSize="15"
                           FontWeight="SemiBold"
                           Foreground="#00E5FF" />
            </StackPanel>

            <!-- Progress Section -->
            <StackPanel Grid.Row="1" Spacing="24" VerticalAlignment="Center">

                <!-- Progress Bar -->
                <StackPanel Spacing="12">
                    <TextBlock Text="{Binding FilesProgressText}"
                               HorizontalAlignment="Center"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                    <Border Background="#20FFFFFF" CornerRadius="12" Padding="4">
                        <ProgressBar Value="{Binding ProgressPercentage}"
                                     Minimum="0"
                                     Maximum="100"
                                     Height="24"
                                     IsIndeterminate="{Binding IsProgressIndeterminate}"
                                     ShowProgressText="True"
                                     Foreground="#0078D4"
                                     CornerRadius="10"/>
                    </Border>
                </StackPanel>

                <!-- Transfer Details -->
                <Border Background="#20FFFFFF" CornerRadius="8" Padding="20"
                        IsVisible="{Binding CurrentProgress, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Current Transfer"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#CCCCCC"/>
                        <TextBlock Text="{Binding TransferDetailsText}"
                                   FontSize="14"
                                   Foreground="White"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Conflicts Warning -->
                <Border Background="#30D32F2F"
                        BorderBrush="#F44336"
                        BorderThickness="2"
                        CornerRadius="8"
                        Padding="20"
                        IsVisible="{Binding HasConflicts}">
                    <StackPanel Spacing="10">
                        <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
                            <PathIcon Data="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2v-4h2v4z"
                                      Width="24" Height="24" Foreground="#F44336"/>
                            <TextBlock Text="{Binding ConflictsText}"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Foreground="#F44336"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Some files have conflicts and require manual resolution"
                                   HorizontalAlignment="Center"
                                   Foreground="White"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </Border>

                <!-- No Progress Message -->
                <Border Background="#20FFFFFF" CornerRadius="8" Padding="32"
                        IsVisible="{Binding CurrentProgress, Converter={x:Static ObjectConverters.IsNull}}">
                    <StackPanel Spacing="12" HorizontalAlignment="Center">
                        <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
                                  Width="48" Height="48" Foreground="#666666"/>
                        <TextBlock Text="Click 'Start Sync' to begin synchronization"
                                   FontSize="15"
                                   Foreground="#CCCCCC" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Control Buttons -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="12"
                        Margin="0,32,0,0">
                <Button Content="Start Sync"
                        Command="{Binding StartSyncCommand}"
                        IsVisible="{Binding !IsSyncing}"
                        Classes="primary" />
                <Button Content="Pause"
                        Command="{Binding PauseSyncCommand}"
                        IsVisible="{Binding IsSyncing}"
                        Classes="secondary" />
                <Button Content="View Conflicts"
                        Command="{Binding ViewConflictsCommand}"
                        IsVisible="{Binding HasConflicts}"
                        Classes="secondary" />
                <Button Content="Close"
                        Command="{Binding CloseCommand}"
                        ToolTip.Tip="Close Sync Progress Window - this does not affect the current syncing progress"
                        Classes="secondary" />
            </StackPanel>

            <!-- Status Footer -->
            <Border Grid.Row="3"
                    Background="#20FFFFFF"
                    Padding="16"
                    Margin="0,24,0,0"
                    CornerRadius="6">
                <TextBlock Text="{Binding StatusMessage}"
                           HorizontalAlignment="Center"
                           FontSize="13"
                           Foreground="White"
                           TextWrapping="Wrap" />
            </Border>
        </Grid>
    </Border>
</UserControl>
